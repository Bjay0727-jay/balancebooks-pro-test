{
  "name": "balancebooks-pro",
  "private": true,
  "version": "2.0.3",
  "type": "module",
  "main": "electron/main.js",
  "author": "BalanceBooks",
  "description": "BalanceBooks Pro - Personal finance tracker",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --config electron-builder.json",
    "electron:build:win": "vite build && electron-builder --config electron-builder.json --win",
    "electron:build:mac": "vite build && electron-builder --config electron-builder.json --mac",
    "electron:build:linux": "vite build && electron-builder --config electron-builder.json --linux",
    "deploy:netlify": "npm run build",
    "deploy:cf": "npm run build && npx wrangler pages deploy dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "dexie": "^4.3.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "sharp": "^0.34.5",
    "vite": "^6.0.0",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
